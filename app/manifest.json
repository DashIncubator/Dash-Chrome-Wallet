{
    "manifest_version": 2,
    "name": "Dash Chrome-Wallet",
    "version": "1.2.0",
    "description": "A Chrome-Extension for the Dash EvoNet-Testnet environment",
    "icons": {
        "16": "./img/icon16.png",
        "48": "./img/icon48.png",
        "128": "./img/icon128.png"
    },
    "permissions": [
        "storage",
        "chrome-extension://*",
        "moz-extension://*",
        "notifications"
    ],
    "background": {
        "scripts": [
            "./lib/browser-polyfill.min.js",
            "./lib/dash.min.js",
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; "
}